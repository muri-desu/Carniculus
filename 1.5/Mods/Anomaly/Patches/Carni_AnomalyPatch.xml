<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>

	<li Class="PatchOperationAdd"><!-- Apparels -->
		<xpath>Defs/AlienRace.ThingDef_AlienRace[defName = "Alien_Carniculus" or defName = "Alien_CarniMama"]/alienRace/raceRestriction/whiteApparelList</xpath>
		<value>
			<li>Apparel_DisruptorFlarePack</li>
			<li>Apparel_PackTurret</li>
			<li>Apparel_DeadlifePack</li>
			<li>Apparel_ShardPsychicShockLance</li>
			<li>Apparel_ShardPsychicInsanityLance</li>
			<li>Apparel_BiomutationLance</li>
		</value>
	</li>

		<li Class="PatchOperationAdd"><!-- シウツ -->
			<xpath>Defs/AlienRace.ThingDef_AlienRace[defName = "Alien_Carniculus"]/recipes</xpath>
			<value>
				<li>SurgicalInspection</li>
				<li>BlissLobotomy</li>
				<li>GhoulInfusion</li>
